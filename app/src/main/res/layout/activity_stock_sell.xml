<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">


    <TextView
        android:id="@+id/tvQuantitySell"
        style="@style/LargeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Quantity" />

    <EditText
        android:id="@+id/etQuantitySell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tvQuantitySell"
        android:layout_toEndOf="@+id/tvQuantitySell" />

    <Button
        android:id="@+id/btnSellStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:text="SELL"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvQuantitySell"
        android:layout_alignStart="@+id/tvQuantitySell"
        android:layout_marginTop="117dp" />


</RelativeLayout>